{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Agent Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/agents/agents.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "MCP Server",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/mcp.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Client",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/app.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Agent Server (Remote Attach)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ],
    "compounds": [
        {
            "name": "All Components",
            "configurations": ["Agent Server", "MCP Server", "Client"]
        }
    ]
}